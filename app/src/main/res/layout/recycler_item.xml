<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="@dimen/cardMarginVertical"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    android:layout_marginTop="@dimen/cardMarginVertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_resting_elivation"
    app:cardMaxElevation="@dimen/card_raised_elivation"

    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:background="@color/md_white_1000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button

            android:id="@+id/powerbutton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            style="?android:attr/borderlessButtonStyle"
            android:longClickable="true"
            android:layout_marginEnd="@dimen/button_left_margin"
            android:layout_marginRight="@dimen/button_left_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:id="@+id/relativeLayout">

        </RelativeLayout>

        <SeekBar
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:paddingStart="@dimen/seekbar_padding_left"
            android:paddingLeft="@dimen/seekbar_padding_left"
            android:paddingEnd="@dimen/seekbar_padding_right"
            android:paddingRight="@dimen/seekbar_padding_right"
            android:paddingBottom="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
        android:id="@+id/card_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_text_margin"
        android:layout_marginRight="@dimen/card_text_margin"
         android:textSize="@dimen/card_text_size"
        android:textColor="@color/md_red_500"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/card_text_margin" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:id="@+id/morevert"
            android:clickable="true"
            android:scaleType="center"
            android:background="@drawable/mores1"
            android:layout_alignTop="@+id/card_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:contextClickable="false" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


